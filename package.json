{
    "name": "vscode-codecept",
    "description": "Codeception Test Explorer",
    "displayName": "Codeception Test Explorer",
    "icon": "img/icon.png",
    "author": "recca0120",
    "license": "MIT",
    "version": "2.0.78",
    "preview": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/rubensr-pc/vscode-phpunit"
    },
    "publisher": "rubensr-pc",
    "categories": [
        "Other",
        "Debuggers",
        "Programming Languages"
    ],
    "keywords": [
        "test",
        "testing",
        "test explorer",
        "codecept",
        "codeception",
        "codecept",
        "language server protocol"
    ],
    "engines": {
        "vscode": "^1.30.0"
    },
    "activationEvents": [
        "*"
    ],
    "extensionDependencies": [
        "hbenl.vscode-test-explorer"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "commands": [
            {
                "command": "codecept.run-all",
                "title": "Codecept: Run all tests"
            },
            {
                "command": "codecept.run-file",
                "title": "Codecept: Run tests in current file"
            },
            {
                "command": "codecept.run-test-at-cursor",
                "title": "Codecept: Run the test at the current cursor position"
            },
            {
                "command": "codecept.rerun",
                "title": "Codecept: Repeat the last test run"
            }
        ],
        "keybindings": [
            {
                "key": "cmd+t cmd+f",
                "command": "codecept.run-file",
                "when": "editorTextFocus && editorLangId == 'php'"
            },
            {
                "key": "cmd+t cmd+t",
                "command": "codecept.run-test-at-cursor",
                "when": "editorTextFocus && editorLangId == 'php'"
            },
            {
                "key": "cmd+t cmd+l",
                "command": "codecept.rerun",
                "when": "editorTextFocus && editorLangId == 'php'"
            },
            {
                "key": "cmd+t cmd+d",
                "command": "codecept.run-directory",
                "when": "editorTextFocus && editorLangId == 'php'"
            },
            {
                "key": "cmd+t cmd+s",
                "command": "codecept.run-all"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Codeception configuration",
            "properties": {
                "codecept.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "codecept.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                },
                "codecept.logpanel": {
                    "description": "write diagnotic logs to an output panel",
                    "type": "boolean",
                    "scope": "resource"
                },
                "codecept.logfile": {
                    "description": "write diagnostic logs to the given file",
                    "type": "string",
                    "scope": "resource"
                },
                "codecept.php": {
                    "type": "string",
                    "description": "Absolute path to php. Fallback to global php if it exists on the command line."
                },
                "codecept.phpArgs": {
                    "type": "array",
                    "default": [],
                    "description": "Any php arguments E.g. -d xdebug.remote_port=8000"
                },
                "codecept.codecept": {
                    "type": "string",
                    "description": "Path to codecept.\n\nAutomatically finds it in common places:\n  - Composer vendor directory\n  - codecept (or codecept.bat for windows) globally on the command line"
                },
                "codecept.args": {
                    "type": "array",
                    "default": [],
                    "description": "Any codecept args (codecept --help) E.g. --configuration ./codeception.yml"
                },
                "codecept.files": {
                    "description": "The glob(s) describing the location of your test files (relative to the workspace folder)",
                    "type": "string",
                    "items": {
                        "type": "string"
                    },
                    "default": "{test,tests}/**/*Test.php",
                    "scope": "resource"
                },
                "codecept.clearOutputOnRun": {
                    "type": "boolean",
                    "default": true,
                    "description": "True will clear the output when we run a new test. False will leave the output after every test."
                },
                "codecept.enableCoverage": {
                    "type": "boolean",
                    "default": true,
                    "description": "True enables the generation of coverage information"
                },
                "codecept.showAfterExecution": {
                    "type": "string",
                    "enum": [
                        "always",
                        "onFailure",
                        "never"
                    ],
                    "default": "onFailure",
                    "description": "Specify if the test report will automatically be shown after execution",
                    "scope": "application"
                }
            }
        },
        "grammars": [
            {
                "language": "Log",
                "scopeName": "code.log",
                "path": "./client/syntaxes/codecept.tmLanguage"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run clean && npm run compile",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "compile": "npm run compile:client && npm run compile:server",
        "compile:client": "webpack --mode production --config ./client/webpack.config.js",
        "_compile:client": "tsc -b ./client/tsconfig.json",
        "compile:server": "webpack --mode production --config ./server/webpack.config.js",
        "watch:client": "tsc -b -w ./client/tsconfig.json",
        "_watch:client": "webpack --mode none --config ./client/webpack.config.js --watch",
        "watch:server": "webpack --mode none --config ./server/webpack.config.js --watch",
        "watch": "tsc -b -w",
        "clean": "rimraf client/out && rimraf server/out",
        "test": "sh ./scripts/e2e.sh",
        "jest": "npm run compile && jest",
        "jest:watch": "jest --watch",
        "report": "jest --coverage",
        "report:watch": "jest --coverage --watch"
    },
    "devDependencies": {
        "@types/jest": "^24.0.15",
        "@types/node": "^12.6.2",
        "jest": "^24.8.0",
        "merge-options": "^1.0.1",
        "rimraf": "^2.6.3",
        "ts-jest": "^24.0.2",
        "ts-loader": "^6.0.4",
        "tslint": "^5.18.0",
        "typescript": "^3.5.3",
        "webpack": "^4.35.3",
        "webpack-cli": "^3.3.5"
    }
}
