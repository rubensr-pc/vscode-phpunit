{
  "name": "vscode-phpunit-pc",
  "description": "PHPUnit Test Explorer for PC",
  "displayName": "PC Test Explorer",
  "icon": "img/icon.png",
  "publisher": "rubensr-pc",
  "version": "3.2.2",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rubensr-pc/vscode-phpunit"
  },
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Testing",
    "Other",
    "Debuggers"
  ],
  "keywords": [
    "php",
    "phpunit",
    "testing",
    "unit test",
    "unittest"
  ],
  "activationEvents": [
    "workspaceContains:**/*.php"
  ],
  "contributes": {
    "commands": [
      {
        "command": "phpunit.reload",
        "title": "PHPUnit: Reload tests"
      },
      {
        "command": "phpunit.run-all",
        "title": "PHPUnit: Run all tests"
      },
      {
        "command": "phpunit.run-file",
        "title": "PHPUnit: Run tests in current file"
      },
      {
        "command": "phpunit.run-test-at-cursor",
        "title": "PHPUnit: Run the test at the current cursor position"
      },
      {
        "command": "phpunit.rerun",
        "title": "PHPUnit: Repeat the last test run"
      },
      {
        "command": "phpunit.debug-all",
        "title": "PHPUnit: debug all tests"
      },
      {
        "command": "phpunit.debug-file",
        "title": "PHPUnit: debug tests in current file"
      },
      {
        "command": "phpunit.debug-test-at-cursor",
        "title": "PHPUnit: debug the test at the current cursor position"
      },
      {
        "command": "phpunit.redebug",
        "title": "PHPUnit: Repeat the last test debug"
      }
    ],
    "keybindings": [
      {
        "key": "cmd+t cmd+s",
        "command": "phpunit.run-all"
      },
      {
        "key": "cmd+t cmd+f",
        "command": "phpunit.run-file",
        "when": "editorTextFocus && editorLangId == php"
      },
      {
        "key": "cmd+t cmd+t",
        "command": "phpunit.run-test-at-cursor",
        "when": "editorTextFocus && editorLangId == php"
      },
      {
        "key": "cmd+t cmd+l",
        "command": "phpunit.rerun",
        "when": "editorTextFocus && editorLangId == php"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "PHPUnit Configuration",
      "properties": {
        "phpunit.php": {
          "type": "string",
          "description": "Absolute path to php. Fallback to global php if it exists on the command line.",
          "default": "php"
        },
        "phpunit.phpoptions": {
          "type": "string",
          "description": "Options for PHP.",
          "default": ""
        },
        "phpunit.phpdebugoptions": {
          "type": "string",
          "description": "Options for PHP when debugging. Example -d xdebug.mode=debug -d xdebug.start_with_request=yes -d xdebug.client_port=8000 -d xdebug.discover_client_host=true",
          "default": "-d xdebug.mode=debug -d xdebug.start_with_request=yes -d xdebug.client_port=8000 -d xdebug.discover_client_host=true"
        },
        "phpunit.phpunit": {
          "type": "string",
          "description": "Path to phpunit. Can be the phpunit file or phpunit.phar.\n\nAutomatically finds it in common places:\n  - Composer vendor directory\n  - phpunit.phar in your project\n  - phpunit (or phpunit.bat for windows) globally on the command line",
          "default": "vendor/bin/phpunit"
        },
        "phpunit.codecept": {
          "type": "string",
          "description": "Path to codecept.",
          "default": "vendor/bin/codecept"
        },
        "phpunit.command": {
          "type": "string",
          "description": "Custom command to run. Ex: `docker exec -t container_name`.",
          "default": null
        },
        "phpunit.args": {
          "type": "array",
          "default": [],
          "description": "Any phpunit args (phpunit --help) E.g. --configuration ${workspaceFolder}/phpunit.xml.dist"
        },
        "phpunit.paths": {
          "type": "object",
          "description": "Path mappings for your virtual/remote environments. Ex: { \"local/workspace/folder\": \"docker/workspace/folder\" }"
        },
        "phpunit.clearOutputOnRun": {
          "type": "boolean",
          "default": true,
          "description": "True will clear the output when we run a new test. False will leave the output after every test."
        },
        "phpunit.showAfterExecution": {
          "type": "string",
          "enum": [
            "always",
            "onFailure",
            "never"
          ],
          "default": "onFailure",
          "description": "Specify if the test report will automatically be shown after execution",
          "scope": "application"
        }
      }
    }
  },
  "main": "./dist/extension.js",
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": false
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js ",
    "jest": "jest",
    "jest:watch": "jest --watch-all",
    "download-api": "vscode-dts main && vscode-dts dev",
    "postinstall": "npm run download-api"
  },
  "devDependencies": {
    "@types/chai": "5.0.1",
    "@types/glob": "^8.1.0",
    "@types/jest": "29.5.14",
    "@types/mocha": "10.0.9",
    "@types/node": "22.8.6",
    "@types/sinon": "17.0.3",
    "@types/yargs-parser": "^21.0.3",
    "@typescript-eslint/eslint-plugin": "8.12.2",
    "@typescript-eslint/parser": "8.12.2",
    "@vscode/test-electron": "2.4.1",
    "chai": "5.1.2",
    "eslint": "9.13.0",
    "glob": "11.0.0",
    "jest": "^29.7.0",
    "minimatch": "10.0.1",
    "mocha": "10.8.2",
    "php-parser": "^3.1.5",
    "sinon": "19.0.2",
    "ts-jest": "29.2.5",
    "ts-loader": "^9.5.1",
    "typescript": "5.6.3",
    "vscode-dts": "^0.3.3",
    "vscode-uri": "3.0.8",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "yargs-parser": "^21.1.1"
  },
  "dependencies": {
    "@types/semver": "7.5.8",
    "semver": "7.6.3",
    "vsce": "^2.15.0"
  }
}
